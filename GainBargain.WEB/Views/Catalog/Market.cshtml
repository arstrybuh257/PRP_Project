@model GainBargain.WEB.Models.MarketVM

@{
    ViewBag.Title = Model.Name;
}

<div class="container-fluid w-75">
    <div class="row p-3 border-bottom">
        <div class="col-5">
            <img class="img-fluid" src="@Model.MarketLogoUrl"/>
        </div>
        <div class="col-7">
            <h2 class="mt-3 mb-2">@Model.Name</h2>
            <p>@Model.Description</p>
        </div>
    </div>
    <div class="row">
        <div class="col-5 ml-3">
            <h6>Адреси</h6>
            <p class="addresses">@(Model.Addresses ?? "Жодна адреса не вказана!")</p>
        </div>
    </div>
</div>
