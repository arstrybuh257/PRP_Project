@model GainBargain.DAL.Entities.ParserSource

@{
    ViewBag.Title = "EditParserSource";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <p>Магазин</p>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.MarketId, ViewBag.Markets as SelectList)
            @Html.ValidationMessageFor(model => model.MarketId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Підкатегорія</p>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList)
            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>URL</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Зберегти" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Повернутися", "AdminPanel")
    @Html.ActionLink("Видалити", "DeleteParserSource", new { id = Model.Id })
</div>
