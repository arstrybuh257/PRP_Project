@model GainBargain.DAL.Entities.Market

@{
    ViewBag.Title = "EditMarket";
}

<h2>Редагування магазину</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            <div class="col-3">Назва</div>
            <div class="col-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">Опис</div>
            <div class="col-9">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">Логотип</div>
            <div class="col-9">
                @Html.EditorFor(model => model.MarketLogoUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MarketLogoUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">Селектор назви товару</div>
            <div class="col-9">
                @Html.EditorFor(model => model.SelName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SelName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">Селектор ціни товару</div>
            <div class="col-9">
                @Html.EditorFor(model => model.SelPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SelPrice, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group row">
            <div class="col-3">Селектор зображення товару</div>
            <div class="col-9">
                @Html.EditorFor(model => model.SelImageUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SelImageUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутися", "Markets")
    @Html.ActionLink("Видалити", "DeleteMarket", new { id = Model.Id })
</div>
