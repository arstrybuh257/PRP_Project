@model GainBargain.DAL.Entities.Market

@{
    ViewBag.Title = "CreateMarket";
}

<h2>Створення магазину</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p>Назва</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Опис</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Логотип</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MarketLogoUrl, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MarketLogoUrl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Селектор ціни товару</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SelPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Селектор опису товару</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SelName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Селектор зображення товару</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelImageUrl, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SelImageUrl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Зберегти" class="btn btn-success" />
        </div>
    </div>
</div>
}

    <div>
        @Html.ActionLink("Повернутися", "AdminPanel")
    </div>
