@model GainBargain.WEB.Models.LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-9 col-md-6 col-lg-4 m-auto shadow-lg">
            <div class="modal-header">
                <h4 class="m-auto">Увійти</h4>
            </div>
            @using (Html.BeginForm(
                "Login",
                "Account",
                FormMethod.Post))

            {
                <div class="modal-body">
                    @Html.ValidationSummary(
                        true,
                        "",
                        new
                        {
                            @class = "text-danger"
                        })
                    <div class="form-group">
                        <div class="col-md-11 m-auto">
                            <input type="email" class="form-control" name="Email" aria-describedby="emailHelp" placeholder="Введіть свій email">
                            @Html.ValidationMessageFor(
                                model => model.Email,
                                "",
                                new
                                {
                                    @class = "text-danger"
                                })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-11 m-auto">
                            <input type="password" class="form-control" name="Password" placeholder="Введіть пароль">
                            @Html.ValidationMessageFor(
                                model => model.Password,
                                "",
                                new
                                {
                                    @class = "text-danger"
                                })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-11 ml-2 ml-md-5">
                            <input type="checkbox" class="form-check-input" name="RememberMe">
                            <label class="form-check-label">Запам'ятати мене</label>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="form-group m-auto">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Увійти" class="accountBtn" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>