@model GainBargain.WEB.Models.LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-10 col-sm-6 m-auto">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    @using (Html.BeginForm("Login","Account", FormMethod.Post))
                    {
                        <div class="modal-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-11 m-auto">
                                    <input type="email" class="form-control" name="Email" aria-describedby="emailHelp" placeholder="Введіть свій email">
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-11 m-auto">
                                    <input type="password" class="form-control" name="Password" placeholder="Введіть пароль">
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-11">
                                    <input type="checkbox" class="form-check-input" name="RememberMe">
                                    <label class="form-check-label">Запам'ятати мене</label>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="form-group m-auto">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Зареєструватися" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
