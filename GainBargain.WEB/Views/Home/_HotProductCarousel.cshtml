@model IList<ProductCache>

@* Carousel for displaying hot offers must be here... *@

<div class="carousel slide" data-ride="carousel">
    <div class="container-fluid carousel-inner">
        <div class="carousel-item active">
            <div class="row ">
                @for (int i = 0; i < 3; ++i)
                {
                    @Html.Partial("_HotProduct", Model[i])
                }
            </div>
        </div>
        <div class="carousel-item">
            <div class="row ">
                @for (int i = 3; i < 6; ++i)
                {
                    @Html.Partial("_HotProduct", Model[i])
                }
            </div>
        </div>
        <div class="carousel-item">
            <div class="row ">
                @for (int i = 6; i < 9; ++i)
                {
                    @Html.Partial("_HotProduct", Model[i])
                }
            </div>
        </div>
        <div class="carousel-item">
            <div class="row ">
                @for (int i = 9; i < 12; ++i)
                {
                    @Html.Partial("_HotProduct", Model[i])
                }
            </div>
            </div>
        </div>
</div>
