<div class="carousel slide" data-ride="carousel">
    <div class="container-fluid carousel-inner">
        <div class="carousel-item active">
            <div class="row ">
                @for (int i = 0; i < 3; ++i)
                {
                    <div class="col-12 col-sm-4 card hot-product">
                        <div>
                            <img class="card-img-top img-fluid" src="@Model[i].ImageUrl"
                                 alt="@Model[i].Name">
                            <div class="price-rect">
                                <div class="price">
                                    @String.Format("{0:0.00} грн", Model[i].Price)
                                </div>
                                <div class="prev-price">
                                    @String.Format("{0:0.00} грн", Model[i].PrevPrice)
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">@Model[i].Name</h4>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="carousel-item">
            <div class="row ">
